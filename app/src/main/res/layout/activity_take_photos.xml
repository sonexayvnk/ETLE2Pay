<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.camerakit.CameraKitView
                app:camera_facing="back"
                android:id="@+id/camerakit"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true" >
            </com.camerakit.CameraKitView>


            <ImageView
                android:id="@+id/myImageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_normall"
                android:layout_marginTop="@dimen/margin_normall"
                android:layout_marginRight="@dimen/margin_normall"
                android:layout_marginBottom="@dimen/margin_normall"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:src="@drawable/img_border_stype" />

            <LinearLayout
                android:gravity="center"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal" >

            </LinearLayout>



        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="@dimen/margin_xxlarge"
        android:gravity="center"
        android:layout_marginLeft="@dimen/margin_xxlarge"
        android:layout_marginRight="@dimen/margin_xxlarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnResume"
                android:background="@drawable/ic_restart_camera"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button

                android:id="@+id/btnDone"
                android:background="@drawable/ic_check"
                android:layout_width="@dimen/button_width_for_rigister"
                android:layout_height="@dimen/button_width_for_rigister" />
            <Button
                android:id="@+id/btnCapture"
                android:background="@drawable/ic_capture"
                android:layout_width="@dimen/button_width_for_rigister"
                android:layout_height="@dimen/button_width_for_rigister" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnSwitchCamera"
                android:background="@drawable/ic_switch_camera"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size" />
        </LinearLayout>



    </LinearLayout>
</RelativeLayout>
