<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/layout_height_xxlarge">

        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/footer_height"
            android:layout_marginTop="@dimen/margin_normall"
            android:layout_marginRight="@dimen/footer_height"
            android:background="@color/colorWhite"

            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_large" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.12"
                android:src="@drawable/logo1" />

            <TextView
                android:id="@+id/txtQrType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginTop="@dimen/margin_normall"
                android:gravity="center"
                android:shadowColor="#9E9C9C"
                android:shadowDx="-3"
                android:shadowDy="3"
                android:shadowRadius="3"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size_xlarge" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"

                android:shadowColor="#9E9C9C"
                android:shadowDx="-3"
                android:shadowDy="3"

                android:shadowRadius="3"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size_normall" />

            <TextView
                android:id="@+id/txtReferenceID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"

                android:shadowColor="#9E9C9C"
                android:shadowDx="-3"
                android:shadowDy="3"

                android:shadowRadius="3"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/text_size_small" />

            <ImageView

                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:src="@drawable/qr_code" />

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"

                android:lines="1"
                android:shadowColor="#9E9C9C"
                android:shadowDx="-3"
                android:shadowDy="3"
                android:shadowRadius="3"
                android:text="Description"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size_normall" />

            <TextView
                android:id="@+id/txtDetail"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:shadowColor="#9E9C9C"

                android:shadowDx="-3"
                android:shadowDy="3"
                android:shadowRadius="3"

                android:text="Detail"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size_normall" />

            <TextView

                android:id="@+id/txtCountdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:shadowColor="#9E9C9C"

                android:shadowDx="-3"
                android:shadowDy="3"
                android:shadowRadius="3"

                android:text="Detail"
                android:textColor="@color/colorGreen"
                android:textSize="@dimen/text_size_normall" />

            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/margin_xxlarge" />

        </LinearLayout>
    </ScrollView>
    <LinearLayout

        android:background="@color/line"

        android:layout_marginBottom="@dimen/margin_normall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="@dimen/margin_xxlarge"
                android:layout_marginRight="@dimen/margin_xxlarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height_normall"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/button_stye_v1"
                    android:gravity="center"
                    android:onClick="onClickCancel"
                    android:text="@string/str_close"
                    android:textAllCaps="false"
                    android:textColor="@color/colorRed"
                    android:layout_marginRight="@dimen/margin_xxsmall"
                    android:textSize="@dimen/text_size_xsmall" />

                <Button
                    android:paddingRight="@dimen/margin_xlarge"
                    android:onClick="onClickToShare"
                    android:id="@+id/btnShare"
                    android:text="@string/str_share"
                    android:paddingLeft="@dimen/margin_xlarge"
                    android:layout_marginLeft="@dimen/margin_xxsmall"
                    android:drawableRight="@drawable/ic_share"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height_normall"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/button_stye_v1"
                    android:gravity="center"

                    android:textAllCaps="false"
                    android:textColor="@color/color_white"

                    android:textSize="@dimen/text_size_xsmall" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>