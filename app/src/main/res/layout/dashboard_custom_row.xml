<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:id="@+id/scrollView28"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="false">
            <LinearLayout
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center" >
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center" >
                    <androidx.cardview.widget.CardView
                        app:cardElevation="0dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:id="@+id/imgdash1"
                            android:background="@drawable/state_focused_color"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:maxWidth="300dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/standard" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <View
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                            <TextView
                                android:id="@+id/txtdash1"

                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center|top"
                                android:text="..."
                                android:textColor="@color/color_black"
                                android:textSize="@dimen/text_size_dashboar"
                                android:textStyle="normal" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <View
                                android:layout_weight="40"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </View>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="65"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <View
                                    android:layout_weight="90"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                                <TextView
                                    android:id="@+id/txtNotificationCount"
                                    android:paddingLeft="@dimen/margin_xxsmall"
                                    android:paddingRight="@dimen/margin_xxsmall"
                                    android:layout_width="match_parent"

                                    android:layout_height="match_parent"
                                    android:layout_weight="70"
                                    android:autoSizeMaxTextSize="100dp"
                                    android:autoSizeMinTextSize="1dp"
                                    android:autoSizeTextType="uniform"
                                    android:background="@drawable/notification_circle"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="95"

                                    android:textColor="#FFFFFF"
                                    android:textStyle="bold" />
                                <View
                                    android:layout_weight="20"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                            </LinearLayout>

                            <View
                                android:layout_weight="70"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </View>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>




</LinearLayout>