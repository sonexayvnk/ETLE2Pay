<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
    <LinearLayout
     android:layout_marginTop="10dp"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:padding="0dp"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout

            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right|bottom"
            android:orientation="vertical"
            android:padding="0dp"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:weightSum="1">
            <ScrollView
                android:id="@+id/scrollView28"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginRight="@dimen/margin_xxlarge"
                    android:layout_marginLeft="@dimen/margin_xxlarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_xlarge"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/radioTopupToOwner"
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:layout_below="@+id/txtSubmumber"
                        android:layout_column="0"
                        android:layout_row="0"
                        android:checked="true"
                        android:gravity="top"
                        android:text=""
                        android:textSize="18dp" />
                    <TextView
                        android:textColor="@color/color_header_footer"
                        android:id="@+id/txt_owner"
                        android:layout_width="300dp"
                        android:layout_height="@dimen/text_view_higth"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="0sp"
                        android:paddingLeft="@dimen/margin_xsmall"
                        android:text="@string/str_topup_your_number"
                        android:textSize="@dimen/tab_text_size" />
                </LinearLayout>
                <LinearLayout
                android:layout_marginRight="@dimen/margin_xxlarge"
                android:layout_marginLeft="@dimen/margin_xxlarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_xlarge"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/str_topup_your_number"
                    android:textSize="@dimen/text_size_khem" />
                <TextView
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin_xsmall"
                    android:id="@+id/txt_owner_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/radioGroupTopupType"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/text_border_stype"
                    android:textSize="@dimen/text_size_khem" />
            </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="@dimen/margin_xxlarge"
                    android:layout_marginLeft="@dimen/margin_xxlarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_xlarge"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/radioTopupToOther"
                        android:layout_width="wrap_content"
                        android:layout_height="40sp"
                        android:layout_below="@+id/radioGroupTopupType"
                        android:layout_column="0"
                        android:layout_marginTop="5dp"
                        android:layout_row="0"
                        android:width="40dp"
                        android:checked="false"
                        android:gravity="top"
                        android:paddingTop="5dp"
                        android:text=""
                        android:textSize="18dp" />
                    <TextView
                        android:textColor="@color/color_header_footer"
                        android:id="@+id/txt_other"
                        android:layout_width="300dp"
                        android:layout_height="@dimen/text_view_higth"
                        android:layout_gravity="left"
                        android:layout_marginLeft="0sp"
                        android:paddingTop="2sp"
                        android:text="@string/txt_other_number"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="@dimen/tab_text_size" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/margin_normall"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgQrCodeTopup"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:background="@drawable/border_qr_code"
                        android:gravity="top"
                        app:srcCompat="@drawable/qr_code" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="@dimen/margin_xxlarge"
                    android:layout_marginLeft="@dimen/margin_xxlarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"

                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="@dimen/margin_xxsmall"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/txt_other_number"
                        android:textSize="@dimen/text_size_khem" />
                    <EditText
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_view_higth"
                        android:id="@+id/txt_other_number"
                        android:paddingLeft="@dimen/margin_xsmall"
                        android:background="@drawable/text_border_stype"
                        android:drawableRight="@drawable/ic_msisdn_history"
                        android:hint="@string/str_put_number_to_topup"
                        android:inputType="number"
                        android:maxLength="10"
                        android:textSize="@dimen/text_size_khem" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="@dimen/margin_xxlarge"
                    android:layout_marginLeft="@dimen/margin_xxlarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"

                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="@dimen/margin_xlarge"
                        android:id="@+id/txtstrNumberType"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/color_blue_facebook"
                        android:text="@string/str_number_type"
                        android:gravity="center_horizontal"
                        android:textSize="@dimen/text_size_khem_smalless" />
                    <TextView

                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_view_higth"
                        android:id="@+id/txtNumberType"
                        android:paddingLeft="@dimen/margin_xsmall"
                        android:background="@drawable/text_border_stype"
                        android:textSize="@dimen/text_size_khem" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="@dimen/margin_xxlarge"
                    android:layout_marginLeft="@dimen/margin_xxlarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"

                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="@dimen/margin_xlarge"
                        android:id="@+id/txtstrBalance"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/str_balance"
                        android:gravity="center_horizontal"
                        android:textSize="@dimen/text_size_khem_smalless" />
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_view_higth"
                        android:id="@+id/txtBalance"
                        android:paddingLeft="@dimen/margin_xsmall"
                        android:background="@drawable/text_border_stype_for_enable"
                        android:maxLength="10"
                        android:textSize="@dimen/text_size_khem" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="@dimen/margin_xxlarge"
                    android:layout_marginLeft="@dimen/margin_xxlarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"

                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="@dimen/margin_xlarge"
                        android:id="@+id/txtstrAmountTopupWallet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/str_amount_paid"
                        android:gravity="center_horizontal"
                        android:textSize="@dimen/text_size_khem_smalless" />
                    <EditText
                        android:gravity="center"
                        android:id="@+id/txtAmountTopupWallet"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_view_higth"
                        android:layout_below="@+id/radioGroupTopupType"
                        android:layout_gravity="center_horizontal"
                        android:paddingLeft="@dimen/margin_xsmall"
                        android:background="@drawable/text_border_stype"

                        android:inputType="number"
                        android:maxLength="22"
                        android:textSize="@dimen/text_size_khem" />
           </LinearLayout>
                <LinearLayout

                    android:layout_marginRight="@dimen/margin_xxlarge"
                    android:layout_marginLeft="@dimen/margin_xxlarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"

                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="@dimen/margin_xlarge"
                        android:id="@+id/txtstrVerifyCodeTopup"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/str_modify_code"
                        android:gravity="center_horizontal"
                        android:textSize="@dimen/text_size_khem_smalless" />
                    <EditText
                        android:gravity="center"
                        android:id="@+id/txtVerifyCodeTopup"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_view_higth"
                        android:layout_below="@+id/radioGroupTopupType"
                        android:layout_gravity="center_horizontal"
                        android:paddingLeft="@dimen/margin_xsmall"
                        android:background="@drawable/text_border_stype"

                        android:inputType="numberDecimal"
                        android:maxLength="22"
                        android:textSize="@dimen/text_size_khem" />
                </LinearLayout>
                <Button
                    android:background="@drawable/button_stye_v1"
                    android:onClick="onClickTopupConfirm"

                    android:textSize="@dimen/text_size_khem"
                    android:layout_width="@dimen/button_width_normall"
                    android:id="@+id/btn_topup"
                    android:textColor="#FFFFFF"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_pin_number_box"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="45dp"
                    android:layout_marginTop="28dp"
                    android:text="@string/str_submit"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>
            </ScrollView>
            <!--</RadioGroup>-->
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>
