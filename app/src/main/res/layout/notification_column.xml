<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:id="@+id/linearLayout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_normall"
            android:layout_marginRight="@dimen/margin_normall"
            android:id="@+id/historyDetial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:background="@color/color_white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView

                            android:id="@+id/txtTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/View1"
                            android:layout_marginLeft="@dimen/margin_normall"
                            android:layout_marginTop="@dimen/margin_xsmall"
                            android:layout_toEndOf="@+id/txtCirclesTitle"

                            android:layout_toRightOf="@+id/txtCirclesTitle"
                            android:layout_weight="1"
                            android:text="subject"
                            android:textColor="#242323"

                            android:textSize="@dimen/text_size_small" />
                        <TextView

                            android:id="@+id/txtStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_alignParentRight="true"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="textPersonName"
                            android:paddingRight="10dp"
                            android:text="Unread"
                            android:textColor="#FF9800"
                            android:textSize="@dimen/text_size_xsmall" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <TextView

                    android:id="@+id/txtDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="left"
                    android:inputType="textMultiLine"

                    android:scrollHorizontally="false"
                    android:text="Description"
                    android:textColor="#868686"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/text_size_xsmall" />

                <TextView

                    android:id="@+id/txtDatetime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_alignParentRight="true"
                    android:ems="10"
                    android:gravity="right"
                    android:inputType="textPersonName"
                    android:paddingRight="10dp"
                    android:text="Date"
                    android:textColor="#868686"
                    android:textSize="@dimen/text_size_xsmall" />
            </LinearLayout>
        </LinearLayout>
        <View

            android:id="@+id/View2"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#DCDCDC" />
    </LinearLayout>

</LinearLayout>