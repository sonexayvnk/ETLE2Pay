<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/linearpackage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_ground_pacgate_row"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textcircle"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:maxLines="1"
                android:layout_marginLeft="@dimen/margin_left_and_right_package_data_row"
                android:layout_marginTop="@dimen/margin_xxlarge"
                android:background="@drawable/donuspacgate"
                android:gravity="center"
                android:text="ETL"
                android:autoSizeMaxTextSize="100dp"
                android:autoSizeMinTextSize="1dp"
                android:textColor="#003192"
                android:paddingLeft="@dimen/margin_xsmall"
                android:paddingRight="@dimen/margin_xsmall"
                android:autoSizeTextType="uniform"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_xsmall"
                android:layout_marginTop="@dimen/margin_large"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginRight="@dimen/margin_left_and_right_package_data_row"

                    android:id="@+id/linear1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_marginTop="@dimen/margin_normall"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:id="@+id/data_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Descriptiom"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/text_size_xsmall"
                            />
                    </LinearLayout>
                    <LinearLayout

                        android:layout_weight="8"
                        android:id="@+id/linear_usage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:visibility="visible"
                            android:id="@+id/packageID"
                            android:layout_width="1dp"
                            android:layout_height="1dp"
                            android:text="TextView" />

                        <ImageView
                            android:id="@+id/img_hit"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_marginRight="5dp"
                            android:paddingRight="5dp" />


                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/package_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:padding="5dp"

                    android:textColor="@color/color_white"
                    android:textSize="@dimen/text_size_khem_smalless"
                    android:textStyle="bold"
                    android:visibility="gone" />
                <TextView
                    android:layout_marginTop="@dimen/margin_xsmall"
                    android:id="@+id/package_more_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="dial"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/text_size_xxsmall"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <LinearLayout
                        android:layout_marginRight="@dimen/paddingLeft_shadow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"

                        android:orientation="horizontal">

                        <Button
                            android:layout_marginBottom="@dimen/paddingLeft_shadow"
                            android:id="@+id/plus"
                            android:layout_width="@dimen/button_width_for_rigister"
                            android:layout_height="@dimen/text_higth_xsmall"

                            android:adjustViewBounds="true"
                            android:background="@drawable/ground_btn_pacgate_row"
                            android:scaleType="fitXY"
                            android:text="@string/str_register"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/text_size_xxsmall"
                            />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>