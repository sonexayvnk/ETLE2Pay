<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginLeft="@dimen/margin_xsmall"
            android:layout_marginRight="@dimen/margin_xsmall"
            android:radius="10dp"

            android:background="@drawable/customer_header_bluse_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">
            <LinearLayout
                android:layout_marginTop="@dimen/margin_xsmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >
                    <LinearLayout
                        android:layout_marginLeft="@dimen/margin_xsmall"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:gravity="center" >
                        <EditText
                            android:textColor="@color/colorPrimaryDark"
                            android:id="@+id/txtDestination_number"
                            android:maxLength="10"
                            android:hint="@string/number_display_hint"
                            android:background="@drawable/text_border_stype"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/text_higth_xlarg"
                            android:gravity="center|top"
                            android:inputType="phone"
                            android:text=""
                            android:textSize="14sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/margin_xsmall"
                        android:layout_marginRight="@dimen/margin_xsmall"
                        android:gravity="center" >
                        <Button
                            android:onClick="onClickPackageDataOtherNumber"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            style="@style/btnStyleBeige"
                            android:text="@string/str_query"
                            android:textSize="15sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/margin_xsmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >
                    <LinearLayout
                        android:layout_marginLeft="@dimen/margin_xsmall"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center" >
                        <TextView
                            android:textColor="@color/colorPrimaryDark"
                            android:id="@+id/txtSubscriberType"
                            android:hint="@string/str_type_of_subscriber"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/text_higth_xlarg"
                            android:background="@drawable/text_border_stype"
                            android:gravity="center|top"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="@dimen/margin_xsmall"
                        android:layout_marginRight="@dimen/margin_xsmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center" >
                        <TextView
                            android:textColor="@color/colorPrimaryDark"
                            android:id="@+id/txtNumberStatus"
                            android:hint="@string/str_mobile_status"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/text_higth_xlarg"
                            android:background="@drawable/text_border_stype"
                            android:gravity="center|top"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="@dimen/margin_xsmall"
                android:layout_marginBottom="@dimen/margin_xsmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_xsmall"
                        android:layout_marginRight="@dimen/margin_xsmall"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="@color/colorPrimaryDark"
                            android:id="@+id/txtNumberType"
                            android:hint="@string/str_type_of_number"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/text_higth_xlarg"
                            android:gravity="center|top"
                            android:background="@drawable/text_border_stype"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout

            android:id="@+id/remark"
            android:layout_marginLeft="@dimen/margin_xsmall"
            android:layout_marginRight="@dimen/margin_xsmall"
            android:layout_marginTop="@dimen/margin_xsmall"
            android:layout_marginBottom="@dimen/margin_xsmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/customer_header_bluse_style"

            android:weightSum="1">
            <TextView

                android:layout_width="match_parent"
                android:padding="8dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normall"
                android:layout_marginBottom="@dimen/margin_normall"
                android:text="@string/the_system_wall_deduct_from_your_balance_and_convert_it_to_a_data_package_for_the_recipient_numaber"
                android:textColor="@color/colorWhite"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_xsmall"
            android:weightSum="1">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xsmall"
                android:layout_marginLeft="@dimen/margin_xsmall"
                android:layout_marginRight="@dimen/margin_xsmall" />
            <TextView
                android:id="@+id/tv_cannotuseService"
                android:layout_width="match_parent"
                android:padding="8dp"
                android:gravity="center"
                android:layout_height="74dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/colorRed"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>