<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.etl.money.TestActivity">
    <LinearLayout
        android:background="@color/counter_black_gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" >
        <androidx.cardview.widget.CardView
            app:cardElevation="0dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_marginTop="@dimen/margin_normall"
                    android:layout_marginLeft="@dimen/margin_normall"
                    android:layout_marginRight="@dimen/margin_normall"
                    android:background="#E7E7E7"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:background="@drawable/card_bg_v5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_marginLeft="@dimen/margin_xxsmall"
                            android:layout_marginRight="@dimen/margin_xxsmall"
                            android:layout_marginTop="@dimen/margin_xxsmall"
                            android:id="@+id/LinearTile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|top" >

                            <LinearLayout
                                android:layout_marginTop="@dimen/margin_xsmall"
                                android:layout_marginLeft="@dimen/margin_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center" >
                                <ImageView
                                    android:layout_width="65dp"
                                    android:layout_height="65dp"
                                    android:gravity="center"
                                    android:background="@drawable/logo1" />
                                <ImageView
                                    android:layout_marginTop="@dimen/margin_normall"
                                    android:src="@drawable/profile"
                                    android:id="@+id/imgProfile"
                                    android:layout_marginBottom="@dimen/margin_xsmall"
                                    android:layout_width="75dp"
                                    android:layout_height="75dp"
                                    android:gravity="center" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center|top"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtTile"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_small"
                                    android:gravity="center"
                                    android:shadowColor="#000000"
                                    android:shadowDx="-5"
                                    android:shadowDy="5"
                                    android:shadowRadius="5"
                                    android:text="@string/str_wallet_etl_company_limited"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/text_size_small" />

                                <LinearLayout

                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/layout_height">

                                    <TextView
                                        android:layout_marginTop="@dimen/margin_xlarge"
                                        android:id="@+id/txtAmount"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="left"
                                        android:paddingLeft="@dimen/margin_xlarge"
                                        android:shadowColor="#000000"
                                        android:shadowDx="-3"
                                        android:shadowDy="3"
                                        android:shadowRadius="3"
                                        android:text="Amount"
                                        android:textColor="#FFFFFF"
                                        android:textSize="@dimen/text_size_normall" />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/txtCardId"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:paddingLeft="@dimen/margin_xlarge"
                                    android:shadowColor="#000000"
                                    android:shadowDx="-3"
                                    android:shadowDy="3"
                                    android:shadowRadius="3"
                                    android:text="1234 2345 3456 4567 "
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/text_size_large" />

                                <TextView
                                    android:id="@+id/txtCardName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:paddingLeft="@dimen/margin_xlarge"
                                    android:shadowColor="#000000"
                                    android:shadowDx="-9"
                                    android:shadowDy="9"
                                    android:shadowRadius="9"
                                    android:text="Sonexay VNNAKHONE"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/text_size_small" />
                                <LinearLayout
                                    android:layout_marginRight="35dp"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:onClick="onClickRefresh"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/ic_refresh_white"
                                        android:text="Sonexay VNNAKHONE"


                                        />
                                </LinearLayout>


                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginTop="@dimen/margin_xxsmall"
                                android:layout_marginRight="@dimen/margin_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center" >
                                <TextView
                                    android:id="@+id/txtClose"
                                    android:onClick="onClickClose"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"

                                    android:background="@drawable/ic_close_white" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutheaderInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center" >


                            <LinearLayout
                                android:visibility="gone"
                                android:layout_marginBottom="@dimen/margin_xxsmall"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center" >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center" >
                                    <TextView
                                        android:visibility="invisible"
                                        android:id="@+id/txtMobilenumber"
                                        android:text="Mobilenumber"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="@dimen/margin_xlarge"
                                        android:shadowDx="-9"
                                        android:shadowDy="9"
                                        android:shadowRadius="9"
                                        android:textColor="#FFFFFF"
                                        android:shadowColor="#000000"
                                        android:textSize="@dimen/text_size_xxxsmall" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/ic_refresh_white"
                                        android:gravity="center"
                                        android:onClick="onClickRefresh" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center" >
                                    <TextView
                                        android:visibility="invisible"
                                        android:id="@+id/txtWalletAccount"
                                        android:text="Mobilenumber"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="@dimen/margin_xlarge"
                                        android:shadowDx="-9"
                                        android:shadowDy="9"
                                        android:shadowRadius="9"
                                        android:textColor="#FFFFFF"
                                        android:shadowColor="#000000"
                                        android:textSize="@dimen/text_size_xxxsmall" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/layout_style"
                        android:layout_marginTop="@dimen/margin_normall"
                        android:layout_marginBottom="@dimen/margin_normall"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:gravity="top"
                        android:orientation="horizontal">
                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ViewStub
                                android:id="@+id/ViewStubHone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:layout_weight="0.75" />
                            <ViewStub
                                android:id="@+id/ViewStubTopup"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.75" />
                            <ViewStub
                                android:id="@+id/ViewStubTransfer"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.75" />
                            <ViewStub
                                android:id="@+id/ViewStubQrPay"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.75" />
                            <ViewStub
                                android:id="@+id/ViewStubEtlPayment"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.75"
                                />
                            <ViewStub
                                android:id="@+id/ViewStubEtlPaymentList"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.75"
                                />
                            <ViewStub

                                android:id="@+id/ViewDashboard"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:background="#00B8B6B6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"

                    android:orientation="horizontal" >
                    <RelativeLayout
                        android:id="@+id/my_relative_layout"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="bottom|right"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/image1"
                            android:layout_width="@dimen/layout_height_xxlarge"
                            android:layout_height="@dimen/layout_height_xxlarge"
                            android:layout_marginStart="@dimen/text_higth_xsmall"
                            android:layout_marginTop="@dimen/text_higth_xsmall"
                            android:layout_marginEnd="@dimen/text_higth_xsmall"
                            android:layout_marginBottom="@dimen/text_higth_xsmall"
                            android:background="@drawable/qr_circle_background"
                            android:onClick="onClickQRPay2"
                            app:srcCompat="@drawable/qr_pay_floating_action2" />
                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>