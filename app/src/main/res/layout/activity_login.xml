<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"></ScrollView>

    <LinearLayout
        android:id="@+id/rootview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView28"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_normall"></View>

                <Button
                    android:id="@+id/lg_changed"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/language_icon"
                    android:paddingStart="0dp"
                    android:paddingEnd="20dp" />



                <LinearLayout
                    android:id="@+id/logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            app:cardElevation="0dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_margin="@dimen/margin_xxlarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_margin="@dimen/margin_xxlarge"

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:adjustViewBounds="true"
                                android:maxWidth="300dp"

                                android:src="@drawable/logo1" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="10" />
                        </androidx.cardview.widget.CardView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="7" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"

            android:paddingBottom="10dp">

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_xxlarge"
        android:layout_marginRight="@dimen/margin_xxlarge"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xxlarge"
            android:layout_marginRight="@dimen/margin_xxlarge"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txtUserName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_small"
                android:inputType="number"
                android:background="@drawable/text_box_boder01"
                android:gravity="center_horizontal|center_vertical"
                android:hint="@string/str_user_name"
                android:maxLength="32"
                android:textColor="@color/color_header_footer" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xxlarge"
            android:layout_marginRight="@dimen/margin_xxlarge"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:padding="5dp"

                android:drawableRight="@drawable/ic_pw_show"
                android:id="@+id/textPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_small"
                android:background="@drawable/text_box_boder01"
                android:gravity="center_horizontal|center_vertical"
                android:hint="@string/pass_hint"
                android:inputType="textPassword"
                android:maxLength="32" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInputLayoutOTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xxlarge"
            android:layout_marginRight="@dimen/margin_xxlarge"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:padding="5dp"
                android:id="@+id/textOTP"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_small"
                android:background="@drawable/text_box_boder01"
                android:gravity="center_horizontal|center_vertical"
                android:hint="@string/str_enter_opt"
                android:inputType="number"
                android:maxLength="32" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xxlarge"
            android:layout_marginTop="@dimen/activity_vertical_margin8"
            android:layout_marginRight="@dimen/margin_xxlarge"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_xxlarge"
                android:layout_marginRight="@dimen/margin_xxlarge">

                <CheckBox
                    android:id="@+id/chRemember_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remember_me" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/activity_vertical_margin8"

            android:layout_marginBottom="@dimen/margin_normall"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_xxlarge"
                android:layout_marginRight="@dimen/margin_xxlarge"
                android:layout_marginBottom="@dimen/margin_normall">

                <Button

                    android:id="@+id/btnUseFinger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0dp"
                    android:layout_weight="5"
                    android:background="@drawable/button_stye_v1"
                    android:onClick="onClickUseFinger"
                    android:shadowColor="#000000"
                    android:textAllCaps="false"
                    android:shadowDx="-3"
                    android:shadowDy="3"
                    android:shadowRadius="3"
                    android:paddingLeft="@dimen/margin_xlarge"
                    android:paddingRight="@dimen/margin_xlarge"
                    android:drawableRight="@drawable/ic_finger"
                    android:text="@string/str_use_finger"
                    android:textColor="#FFFFFF" />
                <Button
                    android:paddingLeft="@dimen/margin_xlarge"
                    android:paddingRight="@dimen/margin_xlarge"
                    android:id="@+id/btn_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0dp"
                    android:layout_weight="10"
                    android:background="@drawable/button_stye_v1"
                    android:onClick="onClickLogin"
                    android:shadowColor="#000000"
                    android:textAllCaps="false"
                    android:shadowDx="-3"
                    android:shadowDy="3"
                    android:shadowRadius="3"
                    android:text="@string/login_button"
                    android:textColor="#FFFFFF" />
<!--                <Button-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginLeft="@dimen/margin_normall"-->
<!--                    android:layout_weight="1"-->
<!--                    android:background="@drawable/button_stye_v1"-->
<!--                    android:onClick="onClickCancel"-->
<!--                    android:shadowColor="#000000"-->
<!--                    android:shadowDx="-3"-->
<!--                    android:textAllCaps="false"-->
<!--                    android:shadowDy="3"-->
<!--                    android:shadowRadius="3"-->
<!--                    android:text="@string/str_cancel"-->
<!--                    android:textColor="#FFFFFF" />-->
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xxlarge"

            android:layout_marginRight="@dimen/margin_xxlarge"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_xxlarge"
                android:layout_marginRight="@dimen/margin_xxlarge">

                <TextView
                    android:onClick="onClickResetPassword"
                    android:textStyle="bold"
android:textColor="@color/color_header_footer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_forget_password" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/footerLayout"
android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_width_for_rigister"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >
        <View
            android:layout_marginBottom="1dp"
            android:background="@color/color_header_footer"
            android:layout_width="match_parent"
            android:layout_height="2dp" />

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardElevation="0dp">
            <ImageView
                android:onClick="onClickRegister"
                android:background="@color/color_header_footer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:maxWidth="300dp"
                android:src="@drawable/k_register" />
            <TextView
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|bottom"
                android:shadowColor="#000000"
                android:text="@string/str_register"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_size_small"/>

        </androidx.cardview.widget.CardView>
        <View
            android:layout_marginBottom="@dimen/margin_xxsmall"
            android:background="@color/line"
            android:layout_width="1dp"
            android:layout_height="match_parent" />
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardElevation="0dp">

            <ImageView
                android:background="@color/color_header_footer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:maxWidth="300dp"
                android:src="@drawable/ic_guest_user" />
            <TextView
                android:id="@+id/guestUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|bottom"
                android:shadowColor="#000000"
                android:text="@string/str_guest_user"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_size_small"/>
        </androidx.cardview.widget.CardView>
        <View
            android:layout_marginBottom="@dimen/margin_xxsmall"
            android:background="@color/line"
            android:layout_width="1dp"
            android:layout_height="match_parent" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardElevation="0dp">
            <ImageView
                android:background="@color/color_header_footer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:maxWidth="300dp"
                android:src="@drawable/k_about_app" />
            <TextView
                android:id="@+id/aboutApp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|bottom"
                android:shadowColor="#000000"
                android:text="@string/str_about_app"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_size"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </LinearLayout>


</RelativeLayout>