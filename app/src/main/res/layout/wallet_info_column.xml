<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout1"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <androidx.cardview.widget.CardView

        android:layout_marginTop="@dimen/margin_xsmall"
        android:layout_marginBottom="@dimen/margin_xsmall"
        android:layout_marginLeft="@dimen/margin_normall"
        android:layout_marginRight="@dimen/margin_large"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        app:cardCornerRadius="10dp">
        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center" >
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_higth_normall"
                android:gravity="left"
                android:text="0"


                android:layout_marginLeft="@dimen/margin_xsmall"



                android:textColor="@color/counter_black_color"
                android:textSize="@dimen/text_size_normall"/>
            <TextView
                android:layout_marginBottom="5dp"
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_higth_small"
                android:gravity="right"
                android:layout_marginRight="@dimen/margin_xsmall"
                android:textColor="@color/colorGray"

                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>