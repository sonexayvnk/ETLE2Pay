<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="#E7E7E7">
    <LinearLayout
        android:background="#E7E7E7"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginTop="@dimen/margin_normall"
            android:layout_marginLeft="@dimen/margin_normall"
            android:layout_marginRight="@dimen/margin_normall"
            android:background="#E7E7E7"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout

                android:background="@drawable/custom_header_wallet_style"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginLeft="@dimen/margin_xxsmall"
                    android:layout_marginRight="@dimen/margin_xxsmall"
                    android:layout_marginTop="@dimen/margin_xxsmall"
                    android:id="@+id/LinearTile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:background="@drawable/ic_blank" />
                    </LinearLayout>
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center" >
                        <TextView
                            android:shadowDx="-5"
                            android:shadowDy="5"
                            android:shadowRadius="5"
                            android:textColor="#FFFFFF"
                            android:shadowColor="#000000"
                            android:id="@+id/txtTile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Home"
                            android:textSize="@dimen/text_size_normall" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center" >
                        <TextView
                            android:onClick="onClickClose"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:background="@drawable/ic_close_white" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center" >
                    <TextView
                        android:id="@+id/txtMobilenumber"
                        android:text="202xxxxxxx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        android:shadowDx="-9"
                        android:shadowDy="9"
                        android:shadowRadius="9"
                        android:textColor="#FFFFFF"
                        android:shadowColor="#000000"
                        android:textSize="@dimen/text_size_xsmall" />
                    <TextView
                        android:shadowDx="-5"
                        android:shadowDy="5"
                        android:shadowRadius="5"
                        android:textColor="#FFFFFF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/str_mobile_number"
                        android:textSize="@dimen/text_size_xxsmall"/>
                </LinearLayout>
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center" >
                        <TextView
                            android:id="@+id/txtbalance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:shadowDx="-9"
                            android:shadowDy="9"
                            android:shadowRadius="9"
                            android:textColor="#FFFFFF"
                            android:shadowColor="#000000"
                            android:textSize="@dimen/text_size_normall"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <View
                            android:layout_margin="@dimen/margin_xsmall"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#FFFFFF" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center" >
                        <TextView
                            android:id="@+id/txtSunBalance"
                            android:text="0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:shadowDx="-9"
                            android:shadowDy="9"
                            android:shadowRadius="9"
                            android:textColor="#FFFFFF"
                            android:shadowColor="#000000"
                            android:textSize="@dimen/text_size_normall" />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="@dimen/margin_xxsmall"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center" >

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/str_available_balance"
                            android:shadowDx="-5"
                            android:shadowDy="5"
                            android:shadowRadius="5"
                            android:textColor="#FFFFFF"
                            android:shadowColor="#000000"
                            android:textSize="@dimen/text_size_xxsmall" />
                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_refresh_white"
                            android:gravity="center"
                            android:onClick="onClickRefresh" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center" >

                        <TextView
                            android:shadowDx="-5"
                            android:shadowDy="5"
                            android:shadowRadius="5"
                            android:textColor="#FFFFFF"
                            android:shadowColor="#000000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/str_sub_balance_wallet"
                            android:textSize="@dimen/text_size_xxsmall"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>







            <LinearLayout
                android:background="@drawable/layout_style"
                android:layout_marginTop="@dimen/margin_normall"
                android:layout_marginBottom="@dimen/margin_normall"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:orientation="horizontal">



                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ViewStub
                            android:id="@+id/ViewStubHone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.75" />
                        <ViewStub
                            android:id="@+id/ViewStubTopup"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.75" />
                        <ViewStub
                            android:id="@+id/ViewStubTransfer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.75" />
                        <ViewStub
                            android:id="@+id/ViewStubEtlPayment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.75"
                            />
                        <ViewStub
                            android:id="@+id/ViewStubEtlPaymentList"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.75"
                            />

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
