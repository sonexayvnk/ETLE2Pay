<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:id="@+id/scrollView28"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="false">
                    <LinearLayout
                        android:layout_marginTop="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_normall"
                        android:layout_marginLeft="@dimen/margin_normall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center" >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center" >
                            <androidx.cardview.widget.CardView
                                app:cardElevation="0dp"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:background="@drawable/state_focused_color"
                                    android:onClick="onClickTransfer"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:maxWidth="300dp"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/wallet_tranfer" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">
                                    <View
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />
                                    <TextView
                                        android:layout_marginLeft="@dimen/margin_xsmall"
                                        android:layout_marginRight="@dimen/margin_xsmall"
                                        android:layout_weight="1.3"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center|top"
                                        android:text="@string/str_transfer"
                                        android:textColor="@color/color_black"
                                        android:textSize="@dimen/text_size_dashboar"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                app:cardElevation="0dp"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:background="@drawable/state_focused_color"
                                    android:onClick="onClickEtlPaymentList"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:maxWidth="300dp"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/wallet_etl" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">
                                    <View
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />
                                    <TextView
                                        android:layout_marginLeft="@dimen/margin_xsmall"
                                        android:layout_marginRight="@dimen/margin_xsmall"
                                        android:layout_weight="1.3"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center|top"
                                        android:text="@string/str_etl_payment"
                                        android:textColor="@color/color_black"
                                        android:textSize="@dimen/text_size_dashboar"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                app:cardElevation="0dp"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:background="@drawable/state_focused_color"
                                    android:onClick="onClickTopup"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:maxWidth="300dp"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/wallet_topup" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">
                                    <View
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />
                                    <TextView
                                        android:layout_marginLeft="@dimen/margin_xsmall"
                                        android:layout_marginRight="@dimen/margin_xsmall"
                                        android:layout_weight="1.3"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center|top"
                                        android:text="@string/str_Recharge"
                                        android:textColor="@color/color_black"
                                        android:textSize="@dimen/text_size_dashboar"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                    </LinearLayout>


        </ScrollView>
    </LinearLayout>




</LinearLayout>